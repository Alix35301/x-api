# Database Configuration
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://postgres:password@localhost:5432/expense_tracker

# Or MySQL if you prefer
# DATABASE_URL=mysql://user:password@localhost:3306/expense_tracker

# MySQL Configuration (individual connection parameters)
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_USER=user
MYSQL_PASSWORD=password
MYSQL_DATABASE=testing

# Application Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-jwt-secret-here-generate-with-openssl-rand-base64-32
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Supabase Configuration (for migration)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key

# Migration Options
MIGRATION_DRY_RUN=true
MIGRATION_BATCH_SIZE=500
MIGRATION_CATEGORY_STRATEGY=SKIP
MIGRATION_SKIP_MISSING_USERS=false
